{% if content %}
    {% if content.right_teaser_img.layout_builder_add_block %}
        {{ content.right_teaser_img }}
    {% endif %}
    {% if content.right_teaser_img|layout_bg_img %}
        {% set attributes = attributes.merge(content.right_teaser_img|layout_bg_img) %}
    {% endif %}
    <div {{ attributes.addClass('hot_models_box-x') }}>
        <div class="text-wrapper">
            <div class="text-shadow">
                {% if content.right_teaser_title %}
                <h3 {{ region_attributes.right_teaser_title.addClass('title_avds') }}>
                    {{ content.right_teaser_title }}
                </h3>
                {% endif %}
                {% if content.right_teaser_description %}
                <div {{ region_attributes.right_teaser_description.addClass('text_avds')}}>
                    {{ content.right_teaser_description|layout_value }}
                </div>
                {% endif %}
                <div class="avds_link">
                    {% if content.right_teaser_link %}
                        {% for item in content.right_teaser_link|array_elements(region_attributes.right_teaser_link.addClass('right_teaser_link')) %}
                    		{{ item }}
                    	{% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endif %}