{% if content %}
<div {{ attributes.addClass('container') }}>
    <div class="row">
        <div class="pub-teaser-handler col-lg-12">
            <div class="pub">
                <div class="banner">
                    <div class="content">
                        {% if content.sublime_r_pub_title %}
                        <div {{ regions_attributes.sublime_r_pub_title.addClass('title')}}>
                            {{ content.sublime_r_pub_titles}}
                        </div>
                        {% endif %}
                        {% if content.sublime_r_pub_description %}
                        <p {{ regions_attributes.sublime_r_pub_description.addClass('text')}}>
                            {{ content.sublime_r_pub_description }}
                        </p>
                        {% endif %}
                        <div class="more">
                            {% if content.sublime_r_pub_link %}
                                {{ content.sublime_r_pub_link }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}