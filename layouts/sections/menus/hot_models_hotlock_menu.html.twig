{% if content %}
<header {{ attributes.addClass('header-section-handler')}}>
  <nav class="navbar navbar-expand-lg header-nav navbar-light ">
    {% if content.menu_logo %}
    <div {{ region_attributes.menu_logo.addClass('navbar-brand')}} href="#">
      {{ content.menu_logo }}
    </div>
    {% endif %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse nav-links" id="navbarSupportedContent">
      {% if content.menu_list %}
        <ul {{ region_attributes.menu_list.addClass(['navbar-nav','ml-auto'])}}>
          {{ content.menu_list }}
        </ul>
      {% endif %}

      {% if content.menu_button %}
      <div {{ region_attributes.menu_button.addClass(['htl-btn','htl-btn--bg'])}}>
        {{ content.menu_button }}
      </div>
      {% endif %}
    </div>
    <div class="header_search_1 d-flex ml-auto align-items-center">
      {% if logged_in == true %}
        <a href="/user/logout" id="header-search-button">
          <i class="fas fa-sign-out-alt"></i>
        </a>
      {% else %}
      <a href="/user/login" id="header-search-button">
        <i class="fas fa-sign-in-alt"></i>
        {{ 'Login'|trans }}
      </a>
      {% endif %}
    </div>
  </nav>
</header>
{% endif %}